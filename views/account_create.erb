<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1 class="section-heading">Login</h1>
                <form action="/account/login" method="post">
                  <input class="form-control" type="text" name="email" value="" placeholder="Your email">
                  <input class="form-control" type="password" name="password" value="" placeholder="Your sekrit psswd">
                  <input class="btn btn-danger form-control" type="submit" value="Login">
                </form>
            </div>
            <div class="col-lg-6">
                <h1 class="section-heading">Register</h1>
                <form action="/account/create" method="post">
                  <input class="form-control" type="text" name="name" value="" placeholder="Your name">
                  <input class="form-control" type="text" name="email" value="" placeholder="Your email">
                  <input class="form-control" type="password" name="password" value="" placeholder="Your sekrit psswd">
                  <input class="form-control" type="password" name="password_conf" value="" placeholder="Your sekrit psswd (again)">
                  <input class="btn btn-danger form-control" type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>
</section>
